<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../src/main.css">
    <link rel="stylesheet" href="../src/poll.css">
    <script src="../src/poll.js" defer></script>
    <title>POLLX: <%= title %></title>

    <!--Meta-->
    <meta name="description" content="Vote on <%= title %>! <%= description %>">

    <!-- Mainfest -->
    <link rel="manifest" href="/manifest.json">

    <!-- Favicon -->
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
</head>

<body>
    <%- include('modules/header'); %>

    <main>
        <div class="spinner-container" id="spinner-container">
            <div class="lds-dual-ring" id="spinner"></div>
            <p class="spinner-text" id="spinner-text">Loading...</p>
        </div>
        <div class="msg-container" id="msg-container"></div>
        <div class="content" id="content">
            <h1 class="pollx" id="poll-title">
                <%= title %>
            </h1>
            <p class="description" id="poll-description">
                <%= description %>
            </p>
            <div class="poll">
                <% answers.forEach( (option, i) => { %>
                    <div class="option">
                        <input type="radio" name="option" id="option<%= i %>">
                        <span class="checkmark"></span>
                        <label for="option<%= i %>"><%= option %></label>
                    </div>
                <% }); %>
            </div>

            <div class="result">
                <figure>
                    <figcaption>Results</figcaption>
                    <div class="charts">
                    </div>
                </figure>
            </div>
        </div>
    </main>

    <%- include('modules/footer'); %>
</body>

</html>
